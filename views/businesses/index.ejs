<%- include('../partials/header') %>

<% if (business !== undefined){ %>
    <% let incomeCounter = 0; %> 
    <% let expenseCounter = 0; %> 
    <h3 id='business-name'><%= business[0].name %></h3><br>

    <% business[0].incomes.forEach(function(i) { %> 
        <% incomeCounter += i.amount %> 
    <% }); %>

    <% business[0].expenses.forEach(function(e) { %> 
        <% expenseCounter += e.price %> 
    <% }); %>
    <section id='home-section'>
    <h4>Income Statement</h4>

        <table>
            <tbody>
                <tr>
                  <td>Income:</td>
                  <td><%= `$${incomeCounter}` %></td>
              </tr>
              <tr>
                  <td>Expenses:</td>
                  <td><%= `$${expenseCounter}` %></td>
              </tr>
              <tr>
                <td>Revenue:</td>
                <td class='revenue'><%= `$${incomeCounter-expenseCounter}` %></td>
            </tr>
            </tbody>
          </table>
        </section>


<% } else { %> 
    <p>No business created.</p>
    <a href="/businesses/new"> Create a business here</a>


<% } %>


<%- include('../partials/footer') %>